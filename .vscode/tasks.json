{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Twine Story",
            "type": "shell",
            "command":"tweego",
            "args": [
                "-o",
                "./out/story.html",
                "./src",
                "&&",
                "tweego",
                "-o",
                "./out/terminal.html",
                "./srcterminal"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Build Twine Story in debug mode",
            "type": "shell",
            "command":"tweego",
            "args": [
                "-t",
                "-o",
                "./out/story-d.html",
                "./src"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        }
    ]
}