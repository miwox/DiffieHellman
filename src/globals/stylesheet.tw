.speech-bubble {
	position: relative;
  	width: 10em;
	background: #831100;
	border-radius: .4em;
  	text-align: center;
  	padding-bottom: 1em;
}

.speech-bubble:after {
	content: '';
	position: absolute;
	bottom: 0;
	left: 50%;
	width: 0;
	height: 0;
	border: 37px solid transparent;
	border-top-color: #831100;
	border-bottom: 0;C6DA767C-6B98-4C4E-9207-EF3AF0440989
	border-left: 0;
	margin-left: -18.5px;
	margin-bottom: -37px;
}

