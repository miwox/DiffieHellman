h1 {
 font-weight: bold;
 font-size: 50px;
 text-align: center;
 color: rgba(212,175,55,.3);
 text-shadow: 0 0 15px rgba(255,255,255,.5), 0 0 10px rgba(255,255,255,.5);

}
div.fixed {
  position: relative;
  bottom: 0;
  right: 0;
}

div.center {
  margin: auto;
  padding: 10px;
  text-align: center;
  vertical-align: middle;
}

div.storyteller {
  border: 3px solid #424949;
  vertical-align: middle;
  padding: 10px;
  text-align: center;
  font-family: "Papyrus";
  background: rgba(60, 60, 60, 0.4);
  
}

div.storyteller {
  border: 3px solid #424949;
  vertical-align: left;
  padding: 10px;
  text-align: center;
  background: rgba(60, 60, 60, 0.4);
  
}

div.keyParent {

  display: flex;
  justify-content: space-evenly;
  height: 100px;
  background-color: purple;
}

div.keyItem {
  
  height: 40px;
  background-color: red;
}